#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Log::Log4perl qw(:easy);

use npg_pipeline::daemon::analysis;

our $VERSION = '0';

Log::Log4perl->easy_init($INFO);

npg_pipeline::daemon::analysis->new_with_options()->loop();

0;

__END__

=head1 NAME

npg_pipeline_analysis_runnner

=head1 SYNOPSIS

=head1 DESCRIPTION

Starts analysis pipeline for runs that have 'analysis pending' status.

=head1 USAGE

=head1 REQUIRED ARGUMENTS

=head1 OPTIONS

=head1 EXIT STATUS

=head1 SUBROUTINES/METHODS

=head2 dry_run

Dry run mode, the pipeline script is not called.

=head2 conf_path

A full path to directory containing config files.

